#! /usr/bin/env bash

set -euo pipefail
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}")" && pwd )"

SKEL="$DIR/til.skel"
AWK_TITLE="$DIR/add-title.awk"

log() {
  printf '%s\n' "$@" >&2
}

die() {
  log "$@"
  exit 1
}

title_sub() {
  title="$1"
  file="$2"
  awk -v title="$title" -f "$AWK_TITLE" "$SKEL" > "$file"
}

main() {
  :
}
